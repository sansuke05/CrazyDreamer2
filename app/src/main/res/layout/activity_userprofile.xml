<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="483dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/face_icon1"
                android:id="@+id/face"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name : \n会津　太郎"
                android:textSize="20sp"
                android:layout_toRightOf="@id/face"/>

            <TextView
                android:id="@+id/text_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ID : \ns1330000"
                android:textSize="20sp"
                android:layout_below="@id/text_name"
                android:layout_toRightOf="@id/face"
                />

            <TextView
                android:id="@+id/text_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tag : \nAIZU"
                android:textSize="20sp"
                android:layout_below="@id/text_id"
                android:layout_toRightOf="@id/face"
                />

            <TextView
                android:id="@+id/text_introduction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/frame_style_userprofile_selfintro"
                android:layout_below="@id/face"
                android:text="世界最恐のホラーゲーム\nこんにちは、会津　太郎です。会津大学の○年生です。VRでホラーゲームの実現を考えていますが、プログラマーとデザイナーが足りていません。一緒に世界で一番リアルで最恐のホラーゲーム作りましょう。連絡お待ちしてます！！
※心臓が弱い方はお断りします"
                android:textSize="20sp"
                android:textColor="#000000"
                />


            <Button
                android:id="@+id/button_invite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="チームに誘う"
                android:padding="24dp"
                android:layout_below="@id/text_introduction"
                />
        </RelativeLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/homeButton"
            app:srcCompat="@drawable/home"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="0.00" />

        <ImageButton
            android:id="@+id/userListButton"
            app:srcCompat="@drawable/user_list"
            android:layout_width="75dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/teamListButton"
            app:srcCompat="@drawable/team_list"
            android:layout_width="75dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/partyButton"
            app:srcCompat="@drawable/perty"
            android:layout_width="75dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/profileButton"
            app:srcCompat="@drawable/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>